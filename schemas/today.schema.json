{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["date", "generated_utc", "updated_utc", "variants", "the3", "audio", "cards"],
  "properties": {
    "date": {"type": "string"},
    "generated_utc": {"type": "string"},
    "updated_utc": {"type": "string"},
    "variants": {
      "type": "object",
      "required": ["neutral", "cheeky", "contrarian", "eli12"],
      "properties": {
        "neutral": {"$ref": "#/definitions/variant"},
        "cheeky": {"$ref": "#/definitions/variant"},
        "contrarian": {"$ref": "#/definitions/variant"},
        "eli12": {"$ref": "#/definitions/variant"}
      }
    },
    "the3": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {"$ref": "#/definitions/story"}
    },
    "audio": {
      "type": "object",
      "required": ["latest", "transcript"],
      "properties": {
        "latest": {"type": "string"},
        "transcript": {"type": "string"}
      }
    },
    "cards": {
      "type": "array",
      "minItems": 0,
      "items": {"type": "string"}
    }
  },
  "definitions": {
    "variant": {
      "type": "object",
      "required": ["angle", "what_to_say", "signal", "time_s"],
      "properties": {
        "angle": {"type": "string"},
        "what_to_say": {"type": "array", "items": {"type": "string"}, "minItems": 1},
        "signal": {"type": "number"},
        "time_s": {"type": "integer"}
      }
    },
    "story": {
      "type": "object",
      "required": ["title", "source", "link", "summary", "why_it_matters", "watch_for", "what_to_say", "confidence", "confidence_reason"],
      "properties": {
        "title": {"type": "string"},
        "source": {"type": "string"},
        "link": {"type": "string"},
        "summary": {"type": "string"},
        "why_it_matters": {"type": "string"},
        "watch_for": {"type": "string"},
        "what_to_say": {"type": "string"},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},
        "confidence_reason": {"type": "string"}
      }
    }
  }
}
